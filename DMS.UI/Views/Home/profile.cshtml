
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "profile";
}

<style>
   .form-container{
       position: absolute;
       top:20%;
       margin: 0 0 0 50px;

   }

   .profiletitle{
       font-size: 35px;
   }

   .profilehead{
       font-size: 20px;
   }

   .profilebody{
       font-size: 16px;
   }
</style>
<div class="form-container">
    <h1 class="profiletitle">My Profile Information</h1>
    <div class="form-row">
        <h2><Label class="profilehead">Name:</Label></h2>
        <h3 class="profilebody"> @Session["cfullname"].ToString()</h3>
    </div>
    <div class="form-row">
        <h2><Label class="profilehead">Address:</Label></h2>
        <h3 class="profilebody"> @Session["caddress"].ToString()</h3>
    </div>
    <div class="form-row">
        <h2><Label class="profilehead">Phone number:</Label></h2>
        <h3 class="profilebody"> @Session["cpno"].ToString()</h3>
    </div>
    <div class="form-row">
        <h2 class="profilehead"><Label>Email:</Label></h2>
        <h3 class="profilebody"> @Session["cemail"].ToString()</h3>
    </div>
</div>
 


