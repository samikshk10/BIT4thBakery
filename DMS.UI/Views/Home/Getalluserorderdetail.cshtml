@model IEnumerable<DMS.DAL.DatabaseContext.getallorderuser>
   

@{
    ViewBag.Title = "Getalluserorderdetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Orders</h2>
<link href="~/Content/adminfiles/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<style>
    td{
        font-size:18px;
    }
    th {
        font-size: 20px;
    }
    caption{
        caption-side:top;
        font-size:40px;
        text-align:center;
        text-decoration:underline;
        color:black;

    }
</style>

<table class="table table-striped" style="position:absolute;top: 15%;">
<caption ><h2 >MY ORDERS DETAILS</h2></caption>
    <tr style="background-color:aquamarine">
     
        <th>
            @Html.DisplayNameFor(model => model.user)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bill)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.invoicedate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.payment)
        </th>
      
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            

            <td>
                @Html.DisplayFor(modelItem => item.user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.invoicedate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payment)
            </td>

         

        </tr>
    }

</table>
