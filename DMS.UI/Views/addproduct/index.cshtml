<i class="fa fa-refresh" id="refresh" onclick="refreshtxt()"></i>


<table class="table" border="1">
    <tr>
        <th>SN</th>
        <th>id</th>
        <th>name</th>
        <th>category</th>
        <th>price</th>

        <th>mfddate</th>
        <th>Expdate</th>

        <th>edit</th>
        <th>delete</th>
    </tr>
    @foreach (var addproduct_table in Model)
    {
<tr>
    <td>@(++sn)</td>
    <td>@addproduct_table.pid</td>
    <td>@addproduct_table.pname</td>
    <td>@addproduct_table.pcategory</td>
    <td>@addproduct_table.pprice</td>
    <td>@addproduct_table.pmfddate</td>
    <td>@addproduct_table.pexpdate</td>
    <td><a href="@Url.Action("edit", new {id=addproduct_table.pid})">EDIT</a></td>
    <td><a href="@Url.Action("deletedata", new { pid=addproduct_table.pid})">DELETE</a></td>
</tr>
    }
</table>
<script src="jquery-3.6.0.min.js"></script>
<script>
   function refeshtxt(){
       document.getElementById('searchtxt').value = " ";
       $("#searchtxt").click();
   }
</script>

