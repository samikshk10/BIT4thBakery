@using (Html.BeginForm("Index", "addproduct", FormMethod.Post))
{
    <lable>Search BY Name:</lable>
    <input type="text" name="namesearch" value=""  id="searchtxt" />
    <input type="submit" name="name" class="button" id="searchbtn"/>
